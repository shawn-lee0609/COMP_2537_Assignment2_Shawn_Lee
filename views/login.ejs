<%- include("templates/header") %>

<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <form action="/loginSubmit" method="post" class="p-4 border rounded shadow-sm">
        <h1 class="h3 mb-4 text-center">Please sign in</h1>

        <div class="form-floating mb-3">
          <input
            name="email"
            type="email"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
            required
          >
          <label for="floatingInput">Email address</label>
        </div>

        <div class="form-floating mb-3">
          <input
            name="password"
            type="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Password"
            required
          >
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check mb-4 text-start">
          <input
            class="form-check-input"
            type="checkbox"
            value="remember-me"
            id="checkDefault"
          >
          <label class="form-check-label" for="checkDefault">
            Remember me
          </label>
        </div>

        <button class="btn btn-primary w-100 py-2 mb-3" type="submit">
          Sign in
        </button>

        <p class="text-center text-body-secondary mb-0">© 2017–2025</p>
      </form>
    </div>
  </div>
</main>

<%- include("templates/footer") %>
